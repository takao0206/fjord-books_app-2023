<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="<%= params[:action] %>">
    <nav class="navbar navbar-expand-lg bg-light">
      <div>
        <% if user_signed_in? %>
          <%= t('views.common.welcome', name: "<strong>#{current_user.email}</strong>").html_safe %> |
          <%= link_to t('views.common.back', name: i18n_pluralize(Book.model_name.human)), books_path, class: "navbar-link" %> |
          <%= link_to t('views.common.back', name: i18n_pluralize(User.model_name.human)), users_path, class: "navbar-link" %> |
          <%= link_to t('views.common.logout'), destroy_user_session_path, data: { turbo_method: :delete }, class: "navbar-link" %>
        <% else %>
          <%= link_to t('views.common.signup'), new_user_registration_path, class: "navbar-link" %> |
          <%= link_to t('views.common.login'), new_user_session_path, class: "navbar-link" %>
        <% end %>
      </div>
    </nav>

    <div>
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
