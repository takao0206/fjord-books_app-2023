<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<div class="marginbottom20px">
  <%= link_to '日本語', { locale: :ja }, class: 'language-switch' %>
  <%= link_to 'English', { locale: :en }, class: 'language-switch' %>
</div>

<div id="books" class="index-items">
  <% @books.each do |book| %>
    <div class="index-item">
      <%= render book %>
      <p>
        <%= link_to "Show this book", book_path(book, locale: I18n.locale) %>
      </p>
    </div>
  <% end %>
</div>

<nav class="page-nav">
  <%= link_to "New book", new_book_path(locale: I18n.locale) %>
</nav>
