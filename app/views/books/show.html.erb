<h1><%= t('views.common.title_show', name: Book.model_name.human) %></h1>

<div class="show-item">
  <%= render @book %>
</div>

<nav class="page-nav">
  <%= link_to t('views.common.edit', name: Book.model_name.human.downcase), edit_book_path(@book) %> |
  <%= link_to t('views.common.back', name: i18n_pluralize(Book.model_name.human.downcase)), books_path %>

  <%= button_to t('views.common.destroy', name: Book.model_name.human.downcase), @book, method: :delete %>
</nav>

<div>
  <div>
    <h2><%= t('views.common.title_index', name:Comment.model_name.human) %></h2>
    <% if @book.comments.any? %>
      <ul>
        <% @book.comments.each do |comment| %>
          <li class="comment-list">
            <strong><%= comment.user.name.presence || comment.user.email %></strong> - <%= l comment.created_at, format: :long %>
            <div class="comment-list-content">
              <%= comment.content %>
            </div>
            <% if comment.user == current_user %>
            <div class="comment-list-link">
              <%= link_to t('views.common.edit', name: Comment.model_name.human.downcase), edit_comment_path(comment) %>
              <%= button_to t('views.common.destroy', name: Comment.model_name.human.downcase), comment, method: :delete, class: "comment-list-link" %>
            </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p><%= t('views.comments.no_comment') %></p>
    <% end %>
  </div>
  <div>
    <%= form_with model: [@book, new_comment_for(@book)], local: true do |form| %>
      <div>
        <%= form.label :content, t('views.common.new', name: Comment.model_name.human.downcase) %>
        <%= form.text_area :content, required: true, placeholder: t('views.comments.placeholder') %>
      </div>
      <div>
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>
