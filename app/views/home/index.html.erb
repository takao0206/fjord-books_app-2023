<h1>ようこそ BooksApp へ</h1>
<div>
  <% if user_signed_in? %>
    <p><%= link_to t('views.common.back', name: i18n_pluralize(Book.model_name.human)), books_path %></p>
    <p><%= link_to t('views.common.back', name: i18n_pluralize(User.model_name.human)), users_path %></p>
    <p><%= link_to t('views.common.logout'), destroy_user_session_path, data: { turbo_method: :delete } %></p>
  <% else %>
    <p><%= link_to t('views.common.signup'), new_user_registration_path %></p>
    <p><%= link_to t('views.common.login'), new_user_session_path %></p>
  <% end %>
</div>
