<div class="user-info table-responsive">
  <table class="table table-striped table-bordered">
    <tbody>
      <tr>
        <th><%= User.human_attribute_name(:email) %></th>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <th><%= User.human_attribute_name(:postal_code) %></th>
        <td><%= @user.postal_code %></td>
      </tr>
      <tr>
        <th><%= User.human_attribute_name(:address) %></th>
        <td><%= @user.address %></td>
      </tr>
      <tr>
        <th><%= User.human_attribute_name(:self_introduction) %></th>
        <td><%= @user.self_introduction %></td>
      </tr>
      <tr>
        <th><%= User.human_attribute_name(:created_at) %></th>
        <td><%= @user.created_at.strftime('%Y年%m月%d日') %></td>
      </tr>
    </tbody>
  </table>
</div>
<%= link_to t('views.common.edit', name: User.model_name.human), edit_user_path, class: "navbar-link" %>
